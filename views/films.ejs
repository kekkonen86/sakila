<%- include('./header') %>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/styles.css">
</head>
<h5>Tässä tiedot meidän elokuvista ja kategorioista.</h1>
<img src="/public/images/logo_valkoinen_pohja.png" alt="sakila tummapohja logo" class="sakila-tumma">

<div class="container">
<div class="table-container">
<div class="films-table">
<table class="styled-table">
    <thead>
      <tr>
        <th>Films</th>
      </tr>
        <% if (films.length === 0) { %>
            <tr>
              <td colspan="2">No films found</td>
            </tr>
          <% } else { %>
            <% films.forEach((film, index) => { %>
              <% if (film.title.toLowerCase() === searchQuery.toLowerCase()) { %>
                <tr id="highlight" class="highlight">
              <% } else { %>
                <tr>
              <% } %>
                <td><%= film.title %></td>
              </tr>
            <% }); %>
          <% } %>
          <script>
            const highlightRows = document.querySelectorAll('.highlight');
            if (highlightRows.length > 0) {
              highlightRows.forEach((row) => {
                row.scrollIntoView({ behavior: 'smooth', block: 'center' });
                row.classList.add('highlight');
              });
            }
          </script>
          
    </tbody>
  </table>
  </div>

  <div class="categories-table">
  <table class="styled-table">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
        <% if (categories.length === 0) { %>
            <tr>
              <td colspan="2">No categories found</td>
            </tr>
          <% } else { %>
            <% categories.forEach((category, index) => { %>
              <% if (category.name.toLowerCase() === searchQuery.toLowerCase()) { %>
                <tr id="highlight2" class="highlight2">
              <% } else { %>
                <tr>
              <% } %>
                <td><%= category.name %></td>
              </tr>
            <% }); %>
          <% } %>
          <script>
            const highlightRow2 = document.querySelector('#highlight2');
            if (highlightRow2) {
              highlightRow2.scrollIntoView({ behavior: 'smooth', block: 'center' });
              highlightRow2.classList.add('highlight');
            }
          </script>
          
    </tbody>
  </table>
</div>
</div>
</div>